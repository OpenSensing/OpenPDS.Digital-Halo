{
  "manifest_version": 2,

  "name":  	 "Digital-Halo",
  "description": "It allows collection of your Digital Halo data",
  "version":     "0.0.2",

  "content_security_policy":
      "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "web_accessible_resources": [
    "bower_components/jquery/dist/jquery.min.map",
    "view/chrome_oauth_receiver.html"
  ],

  "background": {
    "scripts":    [
      "js/bg/store_localy.js",
      "js/port/port.js",
      "bower_components/jquery/dist/jquery.min.js",
      "js/sitename/alttlds.js",
      "js/sitename/tldpatch.js",
      "js/sitename/sitename.js",
      "js/trackers/services.js",
      "js/trackers/catch.js",
      "js/external/dropbox.js",
      "js/dropboxMine.js",
      "js/bg/background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js":      ["js/get_data.js"],
      "run_at":  "document_start" 
    } 
  ],

  "browser_action": {
    "default_icon":  "icon-16.png",
    "default_popup": "view/popup.html",
    "default_title": "See your halo!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "chrome://favicon/",
    "cookies",
    "history",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "history",
    "storage",
    "nativeMessaging"
  ],

  "icons": { "16" : "icon-16.png",
             "48" : "icon-16.png",
             "128": "icon-16.png" 
  }

}
